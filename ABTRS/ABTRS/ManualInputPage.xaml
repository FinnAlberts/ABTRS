<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABTRS.ManualInputPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Voer het ordernummer in" FontSize="20"/>
            <Entry x:Name="orderIdEntry" Placeholder="Ordernummer..." Keyboard="Numeric"/>
            <Button x:Name="openDetailPageButton" Text="Bevestig" Clicked="openDetailPageButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>